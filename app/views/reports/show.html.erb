<div class="panel panel-default">
	<div class="panel-body">
		<div class="col-md-4">
			<%= image_tag @report.image.url(:medium) %>
			<p><%= link_to("← Regresar", reports_path, :id => "back") %></p>

			<div class="table-responsive">
				<table class="table">
					<tbody>
						<tr>
							<td>
								<h1><%= @report.name %></h1>
								<% if user_signed_in? %>
									<%= render 'layouts/options' %>
								<% end %>
							</td>
						</tr>
						<tr>
							<td>
								Se perdió el día: <b><%= @report.since %></b>.<br>
								En <%= @report.city %>
							</td>
								<% if @report.found %>
									<td><br><b>¡Y ya regresó a casa!</b></td>
								<% end %>
						</tr>
						<tr>
							<td>
								<h3>Detalles del reporte:</h3>
								<p>	<%= @report.details %> </p>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>		 