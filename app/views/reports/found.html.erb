<% if @reports.blank? %>
	<div class="alert alert-danger" role="alert"><h4>Aún no hay casos por mostrar…</h4></div>	
<% else %>
	<div class="alert alert-danger" role="alert"><h4>Éstas son las mascotas que han regresado a casa…</h4></div>
<% end %>

<div class="row">
  <% @reports.each do |report| %>
    <div class="col-sm-4 col-md-3">
      <div class="thumbnail">
        <%= link_to( image_tag(report.image.url(:medium), :class => "image"), report) %>
        <p><center><h3 style="display: inline"><%=report.name%></h3> (<%= report.city %>)</center></p>
      </div>
    </div>
  <% end %>
</div>

<%= will_paginate @reports, renderer: BootstrapPagination::Rails, previous_label: "Recientes", next_label: "Anteriores", inner_window: 1, outer_window: 0 %>