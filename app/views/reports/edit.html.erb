<div class="panel panel-default">
    <div class="form-wrapper">
		<h1>Editar reporte</h1><br>

			<%= form_for @report, html: {multipart: true} do |f| %>
				
				<% if @report.errors.any?	%>
					<div id="errors">
						<h3>Woops! Algo salió mal.</h3>
						<ul>
							<% @report.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						</ul>
						<br>
					</div>
				<% end %>

				<p>
					<%= f.label :nombre_de_la_mascota %><br>
					<%= f.text_field :name %>
				</p>

				<p>
					<%= f.label :ciudad %><br>
					<%= f.text_field :city %>
				</p>

				<p>
					<%= f.label :detalles %><br>
					<%= f.text_area :details %>
				</p>

				<p>
					<%= f.label :fecha_de_desaparición %>
					<%= f.date_select :since, :order => [:day, :month, :year] %>
				</p>

				<p>
					<%= f.label :imagen %>
					<%= f.file_field :image %>
				</p><br>

				<p>
					<%= f.hidden_field :found, :value => false %>
				</p>

				<p>
					<%= f.submit "Actualizar", :class => "btn btn-primary" %>
					<%= link_to "Cancelar", @report, { :class => "btn btn-primary" } %>
				</p>
			<% end %>
	</div>
</div>